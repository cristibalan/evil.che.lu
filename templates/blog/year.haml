---
# don't edit this file, it's automatically generated from the template each time
title:      <%= title %>
created_at: <%= Time.now.to_y %>
filter:
  - erb
  - haml
dirty:      true
layout: default
---
%h1= h(@page.title)

- year_posts = @pages.find(:all, :in_directory => @page.dir, :recursive => true, :sort_by => "created_at", :reverse => true, :blog_post => true)
- year_posts.delete(@page)

- if year_posts.empty?
  %p No posts
- else
  - year_posts.group_by{|p| p.created_at.strftime('%B')}.each do |month, posts|
    %h2= month
    %ul.list
      - posts.each do |post|
        %li
          = link_to_page(post)
          %em== (#{post.created_at.strftime('%Y-%m-%d')})
